@model IEnumerable<DppPizzaci.Models.PizzalarModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<p>
    @Html.ActionLink("Yeni Ürün", "EY")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PizzaAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PizzaBoyu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icindekiler)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PizzaAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PizzaBoyu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Icindekiler)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fiyat)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "EY", new { id = item.PizzaNo }, new { @class = "btn btn-danger" } ) |
           
            @Html.ActionLink("Sil", "Delete", new { id = item.PizzaNo }, new { @class = "btn btn-success"  })
        </td>
    </tr>
}

</table>
