@model IEnumerable<DppPizzaci.Models.KampanyalarModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}



<p>
    @Html.ActionLink("Yeni Kampanya", "EY")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KampanyaAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Icindekiler)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fiyat)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KampanyaAdi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Icindekiler)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fiyat)
        </td>
        <td>
            @Html.ActionLink("Düzenle", "EY", new { id=item.KampanyaNo }, new {@class="btn btn-danger"}) |
            
            @Html.ActionLink("Sil", "Delete", new { id = item.KampanyaNo }, new {@class="btn btn-success"})
        </td>
    </tr>
}

</table>
